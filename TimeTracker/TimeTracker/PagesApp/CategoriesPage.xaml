<Page x:Class="TimeTracker.PagesApp.CategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeTracker.PagesApp"
      mc:Ignorable="d" 
      Title="CategoriesPage">

    <Grid Background="white">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <GroupBox Header="Категории" FontFamily="MADE GoodTime Grotesk" FontSize="24">
                <ListBox x:Name="LbCategories" Height="400" Background="AliceBlue" FontFamily="Made GoodTime grotesk" FontSize="24" DisplayMemberPath="Name"/>
            </GroupBox>
            <Button Height="50" Margin="0,10,0,0" FontFamily="Made goodTime grotesk" FontSize="24" Click="EventAddCategory">Добавить</Button>
        </StackPanel>
    </Grid>
</Page>
