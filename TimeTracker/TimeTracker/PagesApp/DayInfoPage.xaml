<Page x:Class="TimeTracker.PagesApp.DayInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeTracker.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,20,0,0" VerticalAlignment="Center">
            <TextBlock FontFamily="MADE GoodTime Grotesk" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0">Дата</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="◁" Height="60" Width="60" Click="EventDecrementDay" Background="#319ca9" BorderBrush="#319ca9"></Button>
                <TextBlock x:Name="TblDate" FontFamily="MADE GoodTime Grotesk" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0">2022.28.11</TextBlock>
                <Button Content="▷" Height="60" Width="60" Click="EventIncrementDay" Background="#319ca9" BorderBrush="#319ca9"></Button>
            </StackPanel>
            <ListView x:Name="LvDayInfo" FontFamily="MADE GoodTime Grotesk" FontSize="20" Height="300" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=TimeStart, StringFormat={}{0:hh':'mm':'ss}}" Width="250">Время начала</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=TimeEnd, StringFormat={}{0:hh':'mm':'ss}}" Width="250">Время окончания</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Categories.Name}" Width="250">Категория</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Time, StringFormat={}{0:hh':'mm':'ss}}" Width="250">Общее время</GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Height="50" Margin="10" Click="EventAddActivity" Background="#319ca9" BorderBrush="#319ca9" FontFamily="Made goodTime grotesk" FontSize="24">Добавить</Button>
        </StackPanel>
    </Grid>
</Page>
